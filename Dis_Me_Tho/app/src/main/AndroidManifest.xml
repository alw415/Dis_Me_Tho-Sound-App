<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.andrewwhitehead.soundapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".soundScreen" />
        <activity android:name=".approval_screen" />
        <activity android:name=".anger_screen" />
        <activity android:name=".cartoon_screen" />
        <activity android:name=".disappointment_screen" />
        <activity android:name=".screams_screen" />
        <activity android:name=".shock_screen" />
        <activity android:name=".random_screen"></activity>
    </application>

</manifest>